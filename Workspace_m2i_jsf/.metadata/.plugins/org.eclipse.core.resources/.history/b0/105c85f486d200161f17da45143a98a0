package com.formation;

public class Navire {
	
	int position;
	int longueur;
	
	public int getPosition() {
		return position;
	}
	public void setPosition(int position) {
		position = (int) Math.random() * (0 - 20);  // TODO récupérer le nbCase de la classe Case
	}
	
	public int getLongueur() {
		return longueur;
	}
	public void setLongueur(int longueur) {
		longueur = (int) Math.random() * (0-5);
		return;
	}
	
	public Navire(int position, int longueur) {
		super();
		this.position = position;
		this.longueur = longueur;
	}
	
}
